<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>59.0</apiVersion>
    <isExposed>true</isExposed>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__RecordPage,lightning__HomePage,lightningCommunity__Default">
            <property name="label" type="String" label="Button Label" description="Text to display on the button"/>
            <property name="type" type="String" label="Button Type" datasource="button,submit,reset" default="submit" description="HTML button type attribute"/>
            <property name="size" type="String" label="Button Size" datasource="small,medium,large" description="Size of the button"/>
            <property name="isDisabled" type="Boolean" label="Disabled" default="false" description="Whether the button is disabled"/>
            <property name="isLoading" type="Boolean" label="Loading" default="false" description="Whether to show loading indicator"/>
            <property name="isSelected" type="Boolean" label="Selected" default="false" description="Whether the button is selected"/>
            <property name="showRadar" type="Boolean" label="Show Radar Animation" default="false" description="Whether to show radar animation"/>
            <property name="className" type="String" label="CSS Class" description="Additional CSS classes"/>
            <property name="iconName" type="String" label="Icon Name" description="Salesforce icon name (e.g., utility:check)"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>